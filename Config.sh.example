# Server-specific configuration for backup scripts.
# Copy this file to Config.sh and fill in your values.
# This file should contain ONLY variable declarations - all logic is in Init.sh.

# Restic repository credentials
export AWS_ACCESS_KEY_ID=""
export AWS_SECRET_ACCESS_KEY=""
export RESTIC_PASSWORD=""
export RESTIC_REPOSITORY=""

# Healthcheck ping URLs (leave empty to disable)
BACKUP_COMPLETE_PING=""
INTEGRITY_CHECK_PING=""
PRUNE_PING=""

# Database backup (set DB_BACKUP=true to enable)
DB_BACKUP=false
DB_EXTRA_OPTIONS="" # e.g. --set-gtid-purged=OFF
DB_HOST=""
DB_PORT="3306"
DB_USER=""
DB_NAME=""

# Uncomment to override defaults:
# DRY_RUN=false
# DO_PARTIAL_REPO_CHECK=true
# PARTIAL_REPO_CHECK_SUBSET=5%
